<h1 class="mt-4">タスク一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task)%></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

